            "description": "Add an event to the schedule.",
            "parameters": {
                "type": "object",
                "properties": {
                    "event": {
                        "type": "string",
                        "description": "The event to add to the schedule. The expression should be as concise as possible."
                    },
                    "start_time": {
                        "type": "string",
