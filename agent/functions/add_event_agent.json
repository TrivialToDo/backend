                    },
                    "remind_time_relative_to_start_time": {
                        "type": "object",
                        "description": "The time to remind the user relative to the start time of the event. This is optional.",
                        "properties": {
                            "operator": {
                                "type": "string",
                                "description": "The remind time is earlier or later than the start time.",
                                "enum": [
                                    "earlier",
                                    "later"
                                ]
                            },
                            "interval_time": {
                                "type": "integer",
                                "description": "The interval time between the remind time and the start time."
                            },
                            "interval_unit": {
                                "type": "string",
                                "description": "The unit of the interval time.",
                                "enum": [
                                    "second",
                                    "minute",
                                    "hour",
                                    "day",
                                    "week",
                                    "month",
                                    "year"
                                ]
                            }
                        }
                    }
                },
                "required": [
                    "event",
                    "start_time",
                    "whether_need_remind"
                ]
            }
        }
